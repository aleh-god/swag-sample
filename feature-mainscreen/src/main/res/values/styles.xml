<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Swagger.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Button</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/main_layout_marginEnd</item>
        <item name="backgroundColor">?attr/backgroundColor</item>
    </style>

    <style name="Widget.Swagger.Button" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="Widget.Swagger.HeaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Header</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/main_layout_marginStart</item>
        <item name="android:layout_marginTop">@dimen/main_layout_marginTop</item>
    </style>

    <style name="Widget.Swagger.BodyText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Body</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Swagger.CategoryText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Category</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="Widget.Swagger.SellerTextPrice" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Category</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="Widget.Swagger.SellerTextPriceOld" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Category</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="Widget.Swagger.SellerTextName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Swagger.Category</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <!-- TextAppearance -->

    <style name="TextAppearance.Swagger.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_medium_1</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Swagger.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.Swagger.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_1</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.Swagger.Category" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_3</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.Swagger.SellerTextPrice" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_medium_2</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.Swagger.SellerTextPriceOld" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_1</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/textPriceOld</item>
    </style>

    <style name="TextAppearance.Swagger.SellerTextName" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_1</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.Swagger.SalesTextBtn" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Swagger.SalesTextIntro" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextAppearance.Swagger.SalesTextName" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextAppearance.Swagger.SalesTextNew" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/markpro</item>
        <item name="android:textSize">@dimen/text_size_small_1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>